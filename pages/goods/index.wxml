<!--pages/goods/index.wxml-->
<Serchinput></Serchinput>
<Tabs tabs="{{tabs}}" bindtabItemChane="handletabItemChane">
<block wx:if="{{tabs[0].isActive}}">
<view class="first">
<navigator url="/pages/goos/index?goods_id={{item.goods_id}}" class="goods_item" wx:for="{{goods_list}}" wx:key="goods_id">
<view class="goods_img_warp" >
<image mode="widthFix" src="{{item.goods_small_logo?item.goods_small_logo:'https://ww1.sinaimg.cn/large/007rAy9hgy1g24by9t530j30i20i2glm.jpg'}}"></image>
</view>
<view class="goods_info_wrap">
<view class="goods_name">{{item.goods_name}}</view>
<view class="goods_price">￥{{item.goods_price}}</view>
</view>
</navigator>
</view>
</block>
<block wx:elif="{{tabs[1].isActive}}">无</block>
<block wx:elif="{{tabs[2].isActive}}">无</block>
</Tabs>
